<!-- this is the "Edit user page" -->
<div class = "row">
  <div class="col-md-6 col-md-offset-3">

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
      <legend>Change User Information</legend>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name , autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :address %><br/>
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :phone %><br/>
        <%= f.phone_field :phone, autofocus: true, class: "form-control" %>
      </div>

       <div class="form-group">
        <%= f.label :website %><br/>
        <%= f.url_field :website, autofocus: true, class: "form-control" %>
      </div>

       <div class="form-group">
        <%= f.label :facebook %><br/>
        <%= f.url_field :facebook, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :twitter %><br/>
        <%= f.url_field :twitter, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :instagram %><br/>
        <%= f.url_field :instagram, autofocus: true, class: "form-control" %>
      </div>


       <div class="form-group">
        <%= f.label :logo %><br/>
        <%= f.url_field :logo, autofocus: true, class: "form-control" %>
      </div>

      <!-- silks, static trapeze, lyra, corde lisse, sling, hand balancing, acroyoga-->
      <div class="form-group">
        <%= f.label :logo %>
        <%= f.check_box :logo %>
      </div>

      <div class = "form-group">
        <label class="checkbox">
          <%= check_box_tag(:pet_dog) %>
          <%= label_tag(:pet_dog, "I own a dog") %>
        </label>
        <label class="checkbox">
          <%= check_box_tag(:pet_cat) %>
          <%= label_tag(:pet_cat, "I own a cat") %>
        </label>
    </div>

      </fieldset>
      <br><br>
      <fieldset>
      <legend>Change Password</legend>

      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

     </fieldset>

      <div class="form-group">
        <%= f.label :current_password %> <i>(You must enter current password to make any changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <div>
        <%= f.submit "Update", class: "btn btn-default" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
