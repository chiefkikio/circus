<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<div class="container">
  <div class = "center-block">
  <div style='width: 1200px;'>
    <div id="basic_map" style='width: 1200px; height: 600px;'></div>
  </div>
</div>
</div>

  <script type="text/javascript">

  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'basic_map'}}, function(){
    var markers = handler.addMarkers([
      <% @users.each do |user| %>
        <% if !user.address.blank? %> <!-- only appears in map if address given -->
          <% if @users.at(-1) == user %>
            {
              lat:<%= user.latitude %>, 
              lng: <%= user.longitude %>, 
              //picture: {
             //   url: "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
               // width:  36,
               // height: 36
              //},
              infowindow: '<a href="/users/' + <%= user.id %> + '"><%= user.name %></a><br><%= user.address %><br><%=user.email %><br><%= user.phone %>'
            }
          <% else %>
            {
              lat:<%= user.latitude %>, 
              lng: <%= user.longitude %>,
              // picture: {
              //   url: "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
              //   width:  36,
              //   height: 36
              // },
              // WHY DOES THIS GIVE A SHIT ABOUT SPACES AND NEW LINES UGHHHh
               infowindow: '<% user.events.each do |event| %><% if event.classtype == "Aerial Hammock" %><img src="https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png"<elsif event.classtype == "Flying Trapeze"><img src="https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png"><% end %><br><%= event.classtype %><% end %><br><a href="/users/' + <%= user.id %> + '"><%= user.name %></a><br/><%= user.address %><br><%=user.email %><br><%= user.phone %>'

                 /* infowindow: '<% user.events.each do |event| %><%= event.classtype %><% end %><br><a href="/users/' + <%= user.id %> + '"><%= user.name %></a><br/><%= user.address %><br><%=user.email %><br><%= user.phone %>'*/

            },
          <% end %>
          <% end %>
      <% end %>
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
  </script>

</body>